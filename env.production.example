###### Basic app settings
NODE_ENV=production
LISTEN_HOST=0.0.0.0
LISTEN_PORT=80

###### Timezone
# Force application timezone (affects pretty logs)
TZ=UTC

###### API prefix
API_BASE_PATH=api
API_VERSION=v1

###### Logging
# Production uses minimal logging for performance
LOG_LEVEL=warn

###### HTTP client settings
# Timeout for outbound provider requests in SECONDS
REQUEST_TIMEOUT_SEC=60

###### LLM defaults
# Default max_tokens when not provided in request
LLM_MAX_TOKENS_DEFAULT=1024

###### LLM Providers
# Required keys depending on selected provider(s)
# OpenAI
OPENAI_API_KEY=
# Optional override (default: https://api.openai.com)
# OPENAI_BASE_URL=

# Anthropic
ANTHROPIC_API_KEY=
# Optional overrides
# ANTHROPIC_BASE_URL= # default: https://api.anthropic.com
# ANTHROPIC_API_VERSION=2023-06-01

# DeepSeek
DEEPSEEK_API_KEY=
# Optional override (default: https://api.deepseek.com)
# DEEPSEEK_BASE_URL=

# OpenRouter
OPENROUTER_API_KEY=
# Optional override (default: https://openrouter.ai/api)
# OPENROUTER_BASE_URL=
